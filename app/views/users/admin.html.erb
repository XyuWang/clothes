<div class="container">
  <div class="well">
    <p align="center">管理员主页</p>
  </div>

  <table class="table">
    <caption>成员管理</caption>
    <tr>
      <th>所有用户</th>
      <th><%= link_to "设计师", designers_path %></th>
      <th><%= link_to "厂家", manufacturers_path %></th>
    </tr>
    <tr>
      <td><%= @users.count %></td>
      <td><%= @designers.count %></td>
      <td><%= @manufacturers.count %></td>
    </tr>
  </table>

  <table class="table table-striped table-bordered">
    <caption>设计列表</caption>
    <tr>
      <th>ID</th>
      <th>标题</th>
      <th></th>
    </tr>
    <% @designs.each do |design| %>
      <tr>
        <td><%=design.id%></td>
        <td><%=link_to design.name, design_path(design.id)%></td>
        <td></td>
      </tr>
    <% end %>
  </table>

  <%= link_to '发布新产品', new_product_path %>
  <table class="table table-striped table-bordered">
    <caption>产品列表</caption>
    <tr>
      <th>ID</th>
      <th>标题</th>
      <th>价格</th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td><%=product.id%></td>
        <td><%=link_to product.title, edit_product_path(product)%></td>
        <td><%=product.price%></td>
      </tr>
    <% end %>
  </table>
</div>
