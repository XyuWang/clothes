<div class="container">
<table class="table">
  <caption><b>Your Orders</b></caption>
  <tr>
    <th>ID</th>
    <th>Product</th>
    <th>Quantity</th>
    <th>Address</th>
    <th>Message</th>
    <th>State</th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>

    <td><%= order.id %></td>
    <td><%= link_to order.product.title, product_path(order.product) %></td>
    <td><%= order.quantity %></td>
    <td><%= order.address %></td>
    <td><%= order.message %></td>
    <td></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
  </tr>
<% end %>
</table>

</div>
