<div class="container-fluid">
  <div class=row-fluid>
    <div class="span2">
      <%= link_to "增加设计", new_design_path, class:"btn btn-large" %>
    </div>
    <div class="span10">
      <table class="table">
        <tr>
          <th>总数</th>
          <th>销量</th>
          <th>未领取奖金</th>
          <th>奖金总额</th>
        </tr>
        <tr>
          <td><%=@designs.count%></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </table>
      <table class="table table-striped table-bordered">
        <tr>
          <th>ID</th>
          <th>标题</th>
          <th></th>
        </tr>
        <% @designs.each do |design| %>
          <tr>
            <td><%=design.id%></td>
            <td><%=link_to design.name, design_path(design.id)%></td>
            <td></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
