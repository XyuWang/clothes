<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Title:</b>
    <%= @product.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @product.description %>
  </p>

  <p>
    <b>Price:</b>
    <%= @product.price %>
  </p>

  <%= link_to "Buy", new_order_path(product_id:@product.id), class:"btn"%>
  <% if can? :manage, @product %>
    <%= link_to 'Edit', edit_product_path(@product) %> 
  <% end %>
</div>
